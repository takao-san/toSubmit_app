<%= render "layouts/header" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
    <h1 class="create-user">ログインフォーム</h1>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="mb-3">
        <%= f.label "パスワード" %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      
    <%= f.submit value="ログイン", class: "btn btn-primary", id: "login-user" %>
    <%= link_to "トップ画面に戻る", index_path, class: "btn btn-light" %>
    <% end %>
</div>
